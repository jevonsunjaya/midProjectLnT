<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="List Kendaraan"
        android:layout_marginTop="30pt"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tvGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="Gambar : "
        android:textSize="20dp"
        android:layout_below="@+id/tvJudul"
        />


    <TextView
        android:id="@+id/tvInpGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJudul"
        android:layout_marginLeft="-115dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/tvJudul"
        android:text="Brio"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Nama : "
        android:textSize="20dp"
        android:layout_below="@+id/tvGambar"
        />

    <TextView
        android:id="@+id/tvInpNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJudul"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="57dp"
        android:layout_toRightOf="@+id/tvNama"
        android:text="Brio"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Brand : "
        android:textSize="20dp"
        android:layout_below="@+id/tvNama"
        />

    <TextView
        android:id="@+id/tvInpBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJudul"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="88dp"
        android:layout_toRightOf="@+id/tvBrand"
        android:paddingTop="10dp"
        android:text="Honda"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvTopSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Top Speed : "
        android:textSize="20dp"
        android:layout_below="@+id/tvBrand"
        />


    <TextView
        android:id="@+id/tvInpTopSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTopSpeed"
        android:layout_marginLeft="-116dp"
        android:layout_marginTop="-36dp"
        android:layout_toRightOf="@+id/tvJudul"
        android:paddingTop="10dp"
        android:text="100"
        android:textSize="20dp" />

    <Button
        android:id="@+id/editButtonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Kendaraan"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>